@model Teacher

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Course</h4>
            <p class="card-description">
                Course Form
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name...">
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Photo">Image</label>
                    <img width="130" height="130" style="border-radius:50%" src="~/@Model.ImageUrl">
                    <input asp-for="Photo" class="form-control" accept="image/*" id="exampleInputUsername1" placeholder="Image...">
                    <span asp-validation-for="Photo"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Speciality">Speciality</label>
                    <input asp-for="Speciality" class="form-control" id="exampleInputEmail1" placeholder="Speciality...">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <button asp-action="index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>